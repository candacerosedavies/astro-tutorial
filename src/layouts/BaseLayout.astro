    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <!-- <a href="/">Home</a>
    <a href="/about/">About</a>
    <a href="/blog/">Blog</a> -->
    <Header />
    <h1>{pageTitle}</h1>
    <slot />
    <Footer />
